{
  "name": "express-backend-template",
  "version": "1.0.0",
  "description": "Production-ready Express.js backend template",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "pnpm run migrate && node src/server.js",
    "dev": "pnpm run migrate && nodemon src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "knex migrate:latest --knexfile src/config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile src/config/knexfile.js",
    "migrate:make": "knex migrate:make --knexfile src/config/knexfile.js",
    "seed": "knex seed:run --knexfile src/config/knexfile.js",
    "seed:make": "knex seed:make --knexfile src/config/knexfile.js",
    "db:reset": "pnpm run migrate:rollback && pnpm run migrate && pnpm run seed"
  },
  "keywords": [
    "express",
    "backend",
    "template",
    "api",
    "rest",
    "postgresql",
    "mysql",
    "knex",
    "jwt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "multer": "1.4.5-lts.2",
    "mysql": "^2.18.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
