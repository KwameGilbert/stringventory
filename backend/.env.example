# Application
APP_NAME=Express Backend
API_VERSION=v1

# Server Configuration
NODE_ENV=development
APP_DEBUG=true
PORT=3000
HOST=localhost

# Database Configuration - Dev
DEV_DB_CLIENT=pg
DEV_DATABASE_URL=
DEV_DB_HOST=127.0.0.1
DEV_DB_PORT=5432
DEV_DB_NAME=stringventory_dev
DEV_DB_USER=postgres
DEV_DB_PASSWORD=
DEV_DB_POOL_MIN=2
DEV_DB_POOL_MAX=10

# Database Configuration - Production
PROD_DB_CLIENT=pg
PROD_DATABASE_URL=
PROD_DB_HOST=
PROD_DB_PORT=5432
PROD_DB_NAME=stringventory_prod
PROD_DB_USER=
PROD_DB_PASSWORD=
PROD_DB_POOL_MIN=2
PROD_DB_POOL_MAX=20

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-must-be-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
# Password Hashing
HASH_ALGORITHM=bcrypt
# Options: bcrypt, scrypt, pbkdf2, argon2 (argon2 requires 'argon2' package)
BCRYPT_ROUNDS=12
HASH_KEY_LENGTH=64
HASH_SALT_LENGTH=16

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Upload Configuration
# Strategy: 'local' (save to server) or 'cloudinary' (cloud storage)
UPLOAD_STRATEGY=local
UPLOAD_LOCAL_PATH=uploads
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_MAX_IMAGE_SIZE=5242880
UPLOAD_MAX_DOCUMENT_SIZE=10485760
UPLOAD_MAX_VIDEO_SIZE=52428800

# Cloudinary Configuration (only if UPLOAD_STRATEGY=cloudinary)
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=uploads


# ============================================
# EMAIL CONFIGURATION
# ============================================
# Provider: smtp, sendgrid, mailgun, ses
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@example.com

# SMTP Configuration (if using smtp provider)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
